<h1 class="title">Editando Pergunta</h1>

<%= render 'alert' %>
<%= form_for(@question, html: {class: "col-md-6"}) do |f| %>
  <% if @question.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@question.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% @question.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :titulo, class: "control-label" %>
    <%= f.text_field :title, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :body, class: "control-label" %><br>
    <%= f.text_field :body, class: "form-control" %>
  </div>
  <%= f.submit "Submeter", :class => "btn btn-default" %>
  <%= link_to 'Encerrar edição', @question, class: "btn btn-default" %>
<% end %>
