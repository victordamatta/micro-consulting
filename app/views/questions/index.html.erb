<h1>Lista de Perguntas</h1>

<table>
  <thead>
    <tr>
      <th>Pergunta</th>
      <th>Detalhes</th>
      <th>Perguntador</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% if @questions %>
      <% @questions.each do |question| %>
        <tr>
          <td><%= question.title %></td>
          <td><%= question.body %></td>
          <td><%= question.user_id %></td>
          <td><%= link_to 'Show', question %></td>
        </tr>
      <% end %>
    <% end %>

    <tr>
      <th>Minhas Perguntas</th>
    </tr>
    <% if @my_questions %>
      <% @my_questions.each do |question| %>
        <tr>
          <td><%= question.title %></td>
          <td><%= question.body %></td>
          <td><%= question.user_id %></td>
          <td><%= link_to 'Show', question %></td>
          <td><%= link_to 'Edit', edit_question_path(question) %></td>
          <td><%= link_to 'Destroy', question, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nova Pergunta', new_question_path %>
<%= link_to 'Voltar', controller: 'home' %>
