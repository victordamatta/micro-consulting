<% if @questions %>
  <div class="question row">
    <% @questions.each do |question| %>
      <h3><%= question.title %></h3>
      <p><%= question.body %></p>
      <p><%= question.user.name %></p>
      <p><%= link_to 'Show', question %></p>
      <hr>
    <% end %>
  </div>
<% end %>
<% if @my_questions %>
<h2>Suas Perguntas</h2>
  <div class="my_question question row">
    <% @my_questions.each do |question| %>
      <h3><%= question.title %></h3>
      <p><%= question.body %></p>
      <%= link_to 'Show', question %>
      <%= link_to 'Edit', edit_question_path(question) %>
      <%= link_to 'Destroy', question, method: :delete, data: { confirm: 'Are you sure?' } %>
      <hr>
    <% end %>
  </div>
<%= link_to 'Nova Pergunta', new_question_path %>
<% end %>
